# This is a DMDirc configuration file.

# This section indicates which sections below take key/value
# pairs, rather than a simple list. It should be placed above
# any sections that take key/values.
keysections:
  metadata
  updates
  version
  defaults

metadata:
  author=Greg <greg@dmdirc.com>
  mainclass=com.dmdirc.addons.ui_swing.SwingController
  description=The standard DMDirc user interface
  name=ui_swing
  nicename=Swing UI

updates:
  id=42

version:
  friendly=0.8

provides:
  swing ui

defaults:
    windowMenuItems=30
    windowMenuScrollInterval=250
    showtopicbar=true
    shownicklist=true
    showfulltopic=false
    hideEmptyTopicBar=false
    textpanebackground=
    textpanebackgroundoption=SCALE
    textpanebackgroundopacity=1
    desktopbackground=dmdirc://com/dmdirc/res/background.png
    desktopbackgroundoption=CENTER
    showjrewarning=true
    showtreeexpands=true
    textpanelinenotification=true
    mdiBarVisibility=true

exports:
  getController in com.dmdirc.addons.ui_swing.SwingController as getController