<?xml version="1.0" encoding="UTF-8"?>
<project name="DMDirc-Plugin" default="default" basedir=".">
    <description>Builds, tests, and runs the project DMDirc-Plugin.</description>
    <macrodef name="iterate">
        <attribute name="target"/>
        <sequential>
            <subant target="@{target}">
                <fileset dir="plugins" includes="*/build.xml"/>
            </subant>
        </sequential>
    </macrodef>

    <target name="build">
        <iterate target="compile"/>
    </target>
    <target name="jar">
        <iterate target="jar"/>
    </target>
    <target name="clean">
        <iterate target="clean"/>
    </target>
    <target name="test">
        <iterate target="test"/>
    </target>
    <target name="test-both">
        <iterate target="test-both"/>
    </target>
    <target name="javadoc">
        <iterate target="javadoc"/>
    </target>
    <target name="pmd">
        <iterate target="pmd"/>
    </target>
    <target name="findbugs">
        <iterate target="findbugs"/>
    </target>
    <target name="cpd">
        <iterate target="cpd"/>
    </target>
    <target name="checkstyle">
        <iterate target="checkstyle"/>
    </target>
    <target name="publish-release">
        <iterate target="publish-release" />
    </target>
    <target name="publish-nightlies">
        <iterate target="publish-nightlies" />
    </target>
    <target name="debug" />
    <target name="run" />

</project>
