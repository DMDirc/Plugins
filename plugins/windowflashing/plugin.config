# This is a DMDirc configuration file.

# This section indicates which sections below take key/value
# pairs, rather than a simple list. It should be placed above
# any sections that take key/values.
keysections:
  metadata
  updates
  requires
  version
  defaults

metadata:
  author=Greg <greg@dmdirc.com>
  mainclass=com.dmdirc.addons.windowflashing.WindowFlashing
  description=Window flashing
  name=windowflashing
  nicename=Window Flashing

version:
  friendly=0.1

updates:
  id=64

requires:
  parent=ui_swing
  os=.*windows.*

required-services:
  swing ui

provides:
  windowflash command

defaults:
  blinkrate=false:0
  blinkratefallback=0
  flashcount=false:5
  flashcountfallback=-1
  flashtaskbar=true
  flashcaption=true

exports:
  flashNotification in com.dmdirc.addons.windowflashing.WindowFlashing as showNotification